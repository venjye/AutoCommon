{
  "name": "git-commit-button",
  "displayName": "AI Commit",
  "icon": "icon.png",
  "description": "AI-Powered Git Commit Messages automatically generates clear, consistent commit messages using an OpenAI-style API that you can fully customize.",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitCommitButton.generateCommitMessage",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "gitCommitButton.showLogs",
        "title": "Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "gitCommitButton.fetchModels",
        "title": "Fetch Models",
        "icon": "$(list-selection)"
      }
    ],
    "menus": {
      "scm/resourceGroup/context": [
        {
          "command": "gitCommitButton.generateCommitMessage",
          "when": "scmResourceGroup == workingTree",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "gitCommitButton.generateCommitMessage"
        },
        {
          "command": "gitCommitButton.showLogs"
        },
        {
          "command": "gitCommitButton.fetchModels"
        }
      ]
    },
    "configuration": {
      "title": "AI Commit",
      "properties": {
        "gitCommitAI.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "AI API URL (OpenAI compatible)"
        },
        "gitCommitAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI API Key"
        },
        "gitCommitAI.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "AI Model name (use 'Get Model List' from the command palette to automatically fetch available models)"
        },
        "gitCommitAI.logLevel": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
          "default": "INFO",
          "description": "Log Level (DEBUG shows all logs, INFO shows general information, WARN shows warnings, ERROR shows only errors)"
        },
        "gitCommitAI.commitLanguage": {
          "type": "string",
          "enum": ["English", "Chinese", "Japanese", "Korean", "French", "German", "Spanish", "Portuguese", "Russian", "Italian"],
          "default": "English",
          "description": "Language for AI-generated commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}
