{
  "name": "git-commit-button",
  "displayName": "Git Commit AI",
  "description": "AI-Powered Git Commit Messages",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitCommitButton.generateCommitMessage",
        "title": "AI生成提交信息",
        "icon": "$(sparkle)"
      },
      {
        "command": "gitCommitButton.showLogs",
        "title": "显示日志",
        "icon": "$(output)"
      },
      {
        "command": "gitCommitButton.fetchModels",
        "title": "获取模型列表",
        "icon": "$(list-selection)"
      }
    ],
    "menus": {
      "scm/resourceGroup/context": [
        {
          "command": "gitCommitButton.generateCommitMessage",
          "when": "scmResourceGroup == workingTree",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "gitCommitButton.generateCommitMessage"
        },
        {
          "command": "gitCommitButton.showLogs"
        },
        {
          "command": "gitCommitButton.fetchModels"
        }
      ]
    },
    "configuration": {
      "title": "Git Commit AI",
      "properties": {
        "gitCommitAI.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "AI API URL (OpenAI compatible)"
        },
        "gitCommitAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI API Key"
        },
        "gitCommitAI.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "AI Model name (使用命令面板中的'获取模型列表'来自动获取可用模型)"
        },
        "gitCommitAI.logLevel": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
          "default": "INFO",
          "description": "日志级别 (DEBUG显示所有日志，INFO显示一般信息，WARN显示警告，ERROR只显示错误)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}
